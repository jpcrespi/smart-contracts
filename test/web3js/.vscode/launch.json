{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "inbox:compile",
            "type": "pwa-node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/inbox/compile.ts",
            "sourceMaps": true,
            "outputCapture": "std"
        },
        {
            "name": "inbox:deploy",
            "type": "pwa-node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/inbox/deploy.ts",
            "sourceMaps": true,
            "outputCapture": "std"
        },
        {
            "name": "inbox:test",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["inbox/test/*.test.ts", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": { 
                "NODE_ENV": "testing"
            }
          },
          {
            "name": "lottery:compile",
            "type": "pwa-node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/lottery/compile.ts",
            "sourceMaps": true,
            "outputCapture": "std"
        },
        {
            "name": "lottery:deploy",
            "type": "pwa-node",
            "request": "launch",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/lottery/deploy.ts",
            "sourceMaps": true,
            "outputCapture": "std"
        },
        {
            "name": "lottery:test",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["lottery/test/*.test.ts", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": { 
                "NODE_ENV": "testing"
            }
          }
    ]
}